  <meta name="description" content="Seoul.pm Perl Advent Calendar 2011" />
  <meta name="keywords" content="perl, advent, calendar, seoulpm, seoul.pm" />
  <link rel="stylesheet" type="text/css" href="<% $global->{css} %>" />

  <!-- Syntax Highlighter -->
