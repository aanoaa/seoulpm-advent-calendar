<& header.mhtml, global => $global, article => $article, year => $year &>
<body><& xfbml.mhtml &>
<div id="wrap">
  <div id="head">
    <p class="hidden"><img src="logo_fb.gif" alt="Seoul.pm"/><% $global->{title} . " " . $global->{title_en} %></p>
    <a href="http://advent.perl.kr/<% $year %>"><img src="title.gif"/></a>
    <menu class="nav">
%   if ($prev) {
      <li class="prev"><a href="<% $prev->date->ymd %>.html"><span class="hidden">이전날</span></a></li>
%   }
      <li class="twit"><a href="http://twitter.com/seoulpm"><span class="hidden">트위터</span></a></li>
      <li class="feed"><a href="atom.xml"><span class="hidden">피드</span></a></li>
      <li class="chat"><a href="http://webchat.freenode.net/?channels=perl-kr"><span class="hidden">채팅</span></a></li>
%   if ($next) {
      <li class="next"><a href="<% $next->date->ymd %>.html"><span class="hidden">다음날</span></a></li>
%   }
    </menu>
  </div>
  <div id="cont">
    <h1><% $title %></h1>
    <% $article->body_html %>
    <& disqus.mhtml, article => $article, year => undef &>
    <& fb_comment.mhtml, url => $article->atom_id, global => $global &>
  </div>
<& article_footer.mhtml, global => $global &>

<%init>
  my $global = $m->comp('variables.mhtml');

  my $title = $global->{korean_day}->($article->date->day) . " 날: " . $article->title;
  $global->{location} = $title;
</%init>

<%args>
  $date
  $year
  $next
  $prev
  $article
</%args>
